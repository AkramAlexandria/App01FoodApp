<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="@dimen/padding"
    tools:context=".MainFood">

    <ImageView
        android:id="@+id/imgBurger"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/burger"
        app:layout_constraintEnd_toStartOf="@+id/imgClubSandwich"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgClubSandwich"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/clubsandwich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imgBurger"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBurger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Big Mac Burger"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/txtClubSandwich"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgBurger" />

    <TextView
        android:id="@+id/txtClubSandwich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Spice Club Sand"
        android:textColor="#000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtBurger"
        app:layout_constraintStart_toStartOf="@+id/imgClubSandwich"
        app:layout_constraintTop_toBottomOf="@+id/imgClubSandwich" />

    <Button
        android:id="@+id/btnBurger"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:text="14.99 Egp"
        android:textColor="#fff"
        app:layout_constraintEnd_toStartOf="@+id/btnClubSandwich"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBurger" />

    <Button
        android:id="@+id/btnClubSandwich"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/colorDark"
        android:text="21.99 Egp"
        android:textColor="#fff"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBurger"
        app:layout_constraintStart_toStartOf="@+id/imgClubSandwich"
        app:layout_constraintTop_toBottomOf="@+id/txtClubSandwich" />

</androidx.constraintlayout.widget.ConstraintLayout>